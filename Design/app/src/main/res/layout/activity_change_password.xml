<?xml version="1.0" encoding="utf-8"?>
<com.example.asus.design.utils.CustomToolBar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:left_btn_visible="true"
    app:title_visible="true"
    app:title_text="修改密码"
    android:id="@+id/toolbar"
    tools:context="com.example.asus.design.activity.ChangePasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bg_color">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffffff"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:text="旧密码"
                android:textSize="@dimen/setting_tv_text_size"
                android:textColor="@color/TextViewWord" />

            <View
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:background="#F3F3F3"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp" />

            <EditText
                android:id="@+id/et_old_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:background="@null"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:hint="请输入旧密码"
                android:textColorHint="@color/HintWord"
                android:textSize="@dimen/setting_tv_text_size"
                android:textColor="@color/EditTextWord" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffffff"
            android:layout_marginTop="1dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:text="新密码"
                android:textSize="@dimen/setting_tv_text_size"
                android:textColor="@color/TextViewWord" />

            <View
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:background="#F3F3F3"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp" />

            <EditText
                android:id="@+id/et_new_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:background="@null"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:hint="请输入新密码"
                android:textColorHint="@color/HintWord"
                android:textSize="@dimen/setting_tv_text_size"
                android:textColor="@color/EditTextWord" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffffff"
            android:layout_marginTop="1dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:text="新密码"
                android:textSize="@dimen/setting_tv_text_size"
                android:textColor="@color/TextViewWord" />

            <View
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:background="#F3F3F3"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp" />

            <EditText
                android:id="@+id/tv_pnone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:background="@null"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:hint="请重新输入新密码"
                android:textColorHint="@color/HintWord"
                android:textSize="@dimen/setting_tv_text_size"
                android:textColor="@color/EditTextWord" />

        </RelativeLayout>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="280dp"
            android:layout_height="38dp"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:text="确定"
            android:layout_marginTop="200dp"
            android:background="@drawable/shape_register"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</com.example.asus.design.utils.CustomToolBar>
