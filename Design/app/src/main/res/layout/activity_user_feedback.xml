<?xml version="1.0" encoding="utf-8"?>
<com.example.asus.design.utils.CustomToolBar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:left_btn_visible="true"
    app:left_btn_src="@drawable/btn_back"
    app:title_visible="true"
    app:title_text="用户反馈"
    android:id="@+id/toolbar"
    tools:context="com.example.asus.design.activity.UserFeedbackActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f6f6f6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="问题描述"/>

        <EditText
            android:layout_width="320dp"
            android:layout_height="200dp"
            android:background="@color/white_color"
            android:textColor="@color/EditTextWord"
            android:textColorHint="@color/HintWord"
            android:hint="请写下您遇到的问题..."
            android:textSize="@dimen/setting_tv_text_size"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="280dp"
            android:layout_height="38dp"
            android:textColor="#ffffff"
            android:textSize="@dimen/setting_tv_text_size"
            android:layout_centerHorizontal="true"
            android:text="提交"
            android:layout_marginTop="320dp"
            android:background="@drawable/shape_register" />

    </RelativeLayout>

</com.example.asus.design.utils.CustomToolBar>
