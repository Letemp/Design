<?xml version="1.0" encoding="utf-8"?>
<com.example.asus.design.utils.CustomToolBar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:left_tv_visible="true"
    app:left_btn_visible="true"
    app:title_visible="true"
    app:title_text="设置"
    android:id="@+id/toolbar"
    tools:context=".activity.MySettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bg_color">

        <LinearLayout
            android:id="@+id/ll_personal_setting"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:background="@color/white_color">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人设置"
                android:textSize="@dimen/setting_tv_text_size"
                android:textColor="@color/EditTextWord"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/arrow_right"
                android:layout_marginLeft="230dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_identity_setting"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="1dp"
            android:background="@color/white_color">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号设置"
                android:textSize="@dimen/setting_tv_text_size"
                android:textColor="@color/EditTextWord"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/arrow_right"
                android:layout_marginLeft="230dp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_about_design"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:background="@color/white_color">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于摄记"
                android:textSize="@dimen/setting_tv_text_size"
                android:textColor="@color/EditTextWord"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/arrow_right"
                android:layout_marginLeft="230dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_user_feedback"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="1dp"
            android:background="@color/white_color">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户反馈"
                android:textSize="@dimen/setting_tv_text_size"
                android:textColor="@color/EditTextWord"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/arrow_right"
                android:layout_marginLeft="230dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_clean"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="1dp"
            android:background="@color/white_color">

            <TextView
                android:id="@+id/tv_clean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清除缓存"
                android:textSize="@dimen/setting_tv_text_size"
                android:textColor="@color/EditTextWord"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:text="0M"
                android:textColor="@color/EditTextWord"
                android:textSize="@dimen/setting_tv_text_size"
                android:layout_marginLeft="230dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_quit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:background="@color/white_color">

            <TextView
                android:id="@+id/tv_quit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退出登录"
                android:textSize="@dimen/setting_tv_text_size"
                android:textColor="#c64836"
                android:layout_marginLeft="10dp"/>


        </LinearLayout>

    </LinearLayout>

</com.example.asus.design.utils.CustomToolBar>
